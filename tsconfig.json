{
 
  "compilerOptions": {
   
    "module": "commonjs",
    "target": "es6",
    "types": ["node"],
    "outDir": "./dist",
    "esModuleInterop": true,
    
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
